<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="inti.SAhomepage.article.repository.ArticleMapper">
    <select id="read" resultMap="ArticleResultMap">
        SELECT
        article_no
        , title
        , content
        , writer
        , regdate
        , viewcnt
        , file_cnt
        FROM
        tbl_article
        WHERE article_no = #{articleNo}
    </select>

    <select id="countArticles" resultType="int">
        <![CDATA[
            SELECT
                COUNT(article_no)
            FROM tbl_article
            WHERE article_no > 0
            ]]>
    </select>

    <select id="listCriteria" resultMap="ArticleResultMap">
        <![CDATA[
        SELECT
            article_no
            , title
            , content
            , writer
            , regdate
            , viewcnt
        FROM tbl_article
        WHERE article_no > 0
        ORDER BY article_no DESC, regdate DESC
        LIMIT #{pageStart}, #{perPageNum}
        ]]>
    </select>

    <update id="updateViewCnt">
        UPDATE tbl_article
        SET viewcnt = viewcnt+1
        WHERE article_no = #{articleNo}
    </update>

    <resultMap id="ArticleResultMap" type="ArticleModel">
        <id property="articleNo" column="article_no"/>
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="writer" column="writer" />
        <result property="regDate" column="regdate" />
        <result property="viewCnt" column="viewcnt" />
        <result property="fileCnt" column="filecnt" />
    </resultMap>
</mapper>